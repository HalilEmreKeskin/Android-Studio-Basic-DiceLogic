<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#757373">
    <TextView
            android:layout_width="100dp"
            android:layout_height="100dp" android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="123dp" app:layout_constraintTop_toBottomOf="@+id/button"
            android:textSize="24sp" android:textStyle="bold" android:textAlignment="center"
            android:gravity="center"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/dice1" android:id="@+id/dice1"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="164dp" android:layout_marginStart="64dp"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/dice2" android:id="@+id/dice2"
            app:layout_constraintTop_toTopOf="@+id/dice1" app:layout_constraintStart_toStartOf="@+id/dice1"
            android:layout_marginTop="8dp" android:layout_marginStart="204dp"/>
    <Button
            android:text="Roll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="150dp" android:layout_marginBottom="274dp"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="clickButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>